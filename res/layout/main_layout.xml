<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_gravity="center" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/linearLayout1"
	android:orientation="vertical">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<LinearLayout android:orientation="vertical"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1" android:background="@drawable/pin_background"
			android:gravity="center" android:id="@+id/button_accounts">
			<ImageView android:src="@drawable/accounts"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
			<TextView android:text="Accounts" style="@style/account_text_style"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="12sp" android:paddingTop="10dp" />
		</LinearLayout>
		<LinearLayout android:orientation="vertical"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1" android:background="@drawable/pin_background"
			android:gravity="center" android:id="@+id/button_transfer">
			<ImageView android:src="@drawable/transfer"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
			<TextView android:text="Transfer" style="@style/account_text_style"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="12sp" android:paddingTop="10dp" />
		</LinearLayout>
		<LinearLayout android:orientation="vertical"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1" android:background="@drawable/pin_background"
			android:gravity="center" android:id="@+id/button_payanyone">
			<ImageView android:src="@drawable/payanyone"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
			<TextView android:text="Pay Anyone" style="@style/account_text_style"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="12sp" android:paddingTop="10dp" />
		</LinearLayout>
		<LinearLayout android:orientation="vertical"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1" android:background="@drawable/pin_background"
			android:gravity="center" android:id="@+id/button_bpay">
			<ImageView android:src="@drawable/bpay"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
			<TextView android:text="BPay" style="@style/account_text_style"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="12sp" android:paddingTop="10dp" />
		</LinearLayout>
	</LinearLayout>
	<FrameLayout android:id="@+id/content"
		android:layout_height="fill_parent" android:layout_width="fill_parent"
		android:layout_weight="1"></FrameLayout>
</LinearLayout>
