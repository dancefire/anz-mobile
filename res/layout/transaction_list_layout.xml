<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/banner_bg" android:gravity="center_vertical"
		android:padding="10dp">
		<TextView android:text="Transaction History" android:id="@+id/banner_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#FFFFFF" android:textSize="18sp"
			android:textStyle="bold"></TextView>
	</LinearLayout>
	<ListView android:id="@android:id/list" android:layout_height="fill_parent"
		android:layout_width="fill_parent"></ListView>

</LinearLayout>
