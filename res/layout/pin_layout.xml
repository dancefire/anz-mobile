<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/banner_bg" android:gravity="center_vertical"
		android:padding="10dp">
		<TextView android:text="Please enter your PIN:" android:id="@+id/banner_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#FFFFFF" android:textSize="18sp"
			android:textStyle="bold"></TextView>
	</LinearLayout>
	<TextView android:layout_width="fill_parent"
		android:background="@android:drawable/edit_text"
		android:layout_height="wrap_content" android:id="@+id/pin_text"
		android:inputType="textPassword" android:layout_margin="10dp"
		android:textSize="35sp" android:text="" android:gravity="center"
		android:textColor="@android:color/black" />
	<TableLayout android:id="@+id/pin_table"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_margin="5dp" android:layout_weight="1"
		android:layout_gravity="center" android:stretchColumns="*">
	</TableLayout>

</LinearLayout>
