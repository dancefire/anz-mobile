<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="top"
	android:background="@drawable/gradient_slice_blue">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/banner_bg" android:gravity="center_vertical"
		android:padding="10dp">
		<TextView android:text="Receipt" android:id="@+id/banner_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#FFFFFF" android:textSize="18sp"
			android:textStyle="bold"></TextView>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:background="#f7f7f7" android:padding="15dp"
		android:layout_margin="20dp">
		<TextView android:text="Receipt Title" android:id="@+id/text_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			style="@style/transaction_text_style" android:textSize="16sp"
			android:padding="15dp" android:layout_gravity="center"
			android:typeface="monospace"></TextView>
		<TextView android:text="" android:id="@+id/text_message"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			style="@style/transaction_text_style" android:textSize="14sp"
			android:padding="10dp" android:layout_weight="0.8" android:typeface="monospace"></TextView>
		<Button android:text="@android:string/ok" android:id="@+id/button_ok"
			android:layout_width="100dp" android:layout_height="50dp"
			android:layout_gravity="right|center_vertical" style="@style/transaction_text_style"
			android:textSize="18sp" android:background="@drawable/button_bg"
			android:gravity="top|center_horizontal"></Button>
	</LinearLayout>
</LinearLayout>
