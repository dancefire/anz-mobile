<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="top"
	android:background="@drawable/gradient_slice_blue">
	<ScrollView android:background="#f7f7f7" android:padding="15dp"
		android:layout_margin="20dp" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<LinearLayout android:layout_height="wrap_content"
			android:orientation="vertical" android:layout_width="fill_parent">
			<TextView android:text="Title" android:id="@android:id/title"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				style="@style/transaction_text_style" android:textSize="16sp"
				android:padding="15dp" android:layout_gravity="center"
				android:typeface="monospace" android:textStyle="bold"></TextView>
			<TextView android:text="message" android:id="@android:id/message"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				style="@style/transaction_text_style" android:textSize="12sp"
				android:padding="10dp" android:layout_weight="0.8" android:typeface="monospace"></TextView>
			<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:gravity="right|center_vertical">
				<Button android:text="@android:string/yes" android:id="@+id/button_ok"
					android:layout_width="100dp" android:layout_height="50dp"
					android:layout_gravity="right|center_vertical" style="@style/transaction_text_style"
					android:textSize="18sp" android:background="@drawable/button_bg"
					android:gravity="top|center_horizontal"></Button>
				<Button android:text="@android:string/cancel" android:id="@+id/button_cancel"
					android:layout_width="100dp" android:layout_height="50dp"
					android:layout_gravity="right|center_vertical" style="@style/transaction_text_style"
					android:textSize="18sp" android:background="@drawable/button_bg"
					android:gravity="top|center_horizontal"></Button>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
