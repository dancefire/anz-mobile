<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.dancefire.anz" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="4" android:targetSdkVersion="8" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>

	<application android:icon="@drawable/piggybank_logo"
		android:label="@string/app_name" android:name=".Apps">
		<activity android:name=".MainActivity" android:theme="@android:style/Theme.NoTitleBar"
			android:screenOrientation="portrait"></activity>
		<activity android:name=".ANZMobileActivity" android:theme="@android:style/Theme.NoTitleBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"></action>
				<category android:name="android.intent.category.LAUNCHER"></category>
			</intent-filter>
		</activity>
		<activity android:name=".PinVerifyActivity" android:theme="@android:style/Theme.NoTitleBar"
			android:screenOrientation="portrait"></activity>
		<activity android:name=".RegisterActivity" android:theme="@android:style/Theme.NoTitleBar"
			android:screenOrientation="portrait"></activity>
		<activity android:name=".SelectionActivity" android:theme="@android:style/Theme.NoTitleBar"></activity>
		<activity android:name=".TransactionListActivity"
			android:theme="@android:style/Theme.NoTitleBar"></activity>
		<activity android:name=".SettingActivity"></activity>
	</application>
</manifest>